  <div class="image_catalog">

    <% @posts.each do |post| %>
      <%= link_to post do %>
        <%= image_tag (post.image.url(:thumb)), :style => 'width: 310px; height: 200px; padding-left: 10px;padding-right:10px;', class: "home_image" %>
      <% end %>
    <% end %>

  </div>
  <div class="title_catalog">
    <% @posts.each do |post| %>
    <h3><a href="#"><%= link_to post.title, post %></a></h3>
    <% end %>

  </div>
  <h3 class="title"> trending </h3>
  <hr>
<div class="recent_posts">
  <div id="posts_wrapper" class="skinny_wrapper">

<% @number = 0 %>
  <% Post.all.([3...8]).order("created_at DESC") do |post| %>
    <div class="post">
    <p class="date_trending"><%= post.created_at.strftime('%A, %B %d') %></p>
    <h2><a href="#"> <%= link_to post.title, post %> </a></h2>
    <%= image_tag (post.image.url(:large)), class: "posts_show_img" %>
    <% post.category_id do |category| %>
    <li>
    <%= link_to category.name, posts_path(category: category.name) %>
    </li>
    <% @number += 1 %>
    <% end %>

  </div>

<% end %>

