  <% filteredPosts = [] %>
  <!--filtered posts are supposed to be approved -->
  <% Post.all.order("created_at desc").each do |post| %>
    <% filteredPosts.push post %>
  <% end %>

  <div class="left_featured">
    <% filteredPosts[1..3].each do |post| %>
    <%= link_to post do %>
      <%= image_tag (post.image.url(:thumb)), :style => 'width: 260px; height: 200px; padding-left: 10px;padding-right:10px;', class: "home_image" %>
      <h5><a href="#"><%= link_to post.title, post %></a></h5>
    <% end %>
  <% end %>
  </div>

 <div class="featured_img">
   <%= link_to filteredPosts[0] do %>
    <center> <%= image_tag (filteredPosts[0].image.url(:large)), :style => 'width: 50%; display: block; height: 500px; margin-top: -31px; margin-bottom: 10px; margin-left: -70px;', class: "featured_img" %></center>
    <div id="main_hdr">

      <h3 id="main_hdr"><a href="#"><%= link_to filteredPosts[0].title, filteredPosts[0] %></a></h3>
 <% end %>
 </div>
  <div class="image_catalog">

    <% filteredPosts[1..3].each do |post| %>
      <%= link_to post do %>
        <%= image_tag (post.image.url(:thumb)), :style => 'width: 310px; height: 200px; padding-left: 10px;padding-right:10px;', class: "home_image" %>
      <% end %>
    <% end %>

  </div>
  <div class="title_catalog">
    <% filteredPosts[1..3].each do |post| %>
    <h3><a href="#"><%= link_to post.title, post %></a></h3>
    <% end %>

  </div>
  <h3 class="title"> trending </h3>
  <hr>
<div class="recent_posts">
  <div id="posts_wrapper" class="skinny_wrapper">



  <% filteredPosts[4..-1].each do |post| %>
      <div class="post">
      <p class="date_trending"><%= post.created_at.strftime('%A, %B %d') %></p>
      <h2><a href="#"> <%= link_to post.title, post %> </a></h2>
      <%= image_tag (post.image.url(:large)), class: "posts_show_img" %>
      <% post.category_id do |category| %>
      <li>
      <%= link_to category.name, posts_path(category: category.name) %>
      </li>
    <% end %>




  </div>

<% end %>


