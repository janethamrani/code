<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
  <%= image_tag @post.image.url, :style => 'position: absolute; width: 100%; height: 300px; margin-left: -40em; margin-top: -13.3em; filter: blur(7px);' %>


    <h1 id="form_title"><%= @post.title %></h1>
    <p id="date_post"><%= @post.created_at.strftime("%A, %B %d") %></p>

    <p class="author" style="margin-right: 10px;">By <%= @post.user.full_name %></p>

  </header>

<div id="content">
  <%= markdown @post.content %>
</div>

<% if user_signed_in? %>
  <div id="admin_links">
  <%= link_to "Edit Article", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
<%end%>



<hr>
<div id="share_box">
  <p>Share This Post!</p>
<a href="#"><i class="fab fa-twitter"></i></a>
<a href="#"><i class="fab fa-instagram"></i></a>
<a href="#"><i class="fab fa-facebook"></i></a>

</div>
<hr>


</div>


