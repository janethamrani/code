<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
  <%= image_tag @post.image.url(:large), :style => 'width: 100%; height: 300px; display: block; margin-left: auto; margin-right: auto;  filter: blur(3px);' %>


    <h1><%= @post.title %></h1>
    <p id="date_post"><%= @post.created_at.strftime("%A, %B %d") %></p>



    <hr>
  </header>

<div id="content">
  <%= markdown @post.content %>
</div>

<% if user_signed_in? %>
  <div id="admin_links">
  <%= link_to "Edit Article", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
<% end %>



<hr>
<div id="share_box">
  <p>Share This Post!</p>
<a href="#"><i class="fab fa-twitter"></i></a>
<a href="#"><i class="fab fa-instagram"></i></a>
<a href="#"><i class="fab fa-facebook"></i></a>

</div>
<hr>


</div>


