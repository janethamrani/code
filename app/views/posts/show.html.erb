
<header>
  <h1 class="post_title" id="post_show_title"><%= @post.title %></h1>
  <div class="date_posts_show">
  <p id="date_post"><%= @post.created_at.strftime("%A, %B %d") %></p>
  <p class="author">By <%=@post.user.full_name%></p>
</div>

<%= image_tag @post.thumbnail.url, :style => 'position: relative; width: 50%; height: auto;', :class => "show_thumbnail" %>

</header>


<div id="post_show_content" class="skinny_wrapper wrapper_padding">


<div id="content">
  <%= raw @post.content %>
</div>

<% if can? :update, @post %>
  <div id="admin_links">
  <%= link_to "Edit Article", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
<%end%>





</div>

<%= render 'disqus' %>

