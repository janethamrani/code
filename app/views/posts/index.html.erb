<h2 id = "page_title"><%= Category.find_by(name: params[:category]).name %> </h2>
<div id="posts_wrapper" class="skinny_wrapper">

<% @posts.each do |post| %>
  <div class="post">
    <p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
    <h2><a href="#"> <%= link_to post.title, post %> </a></h2>
    <p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>

    <%= image_tag (post.image.url(:large)), class: "posts_show_img" %>


  </div>
<% end %>


</div>
