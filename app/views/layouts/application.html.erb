<!DOCTYPE html>
<html>
  <head>
    <% if content_for?(:head) %>
        <%= yield(:head) %>
    <% else %>
        <title>consonancie</title>
    <% end %>

    <title>consonancie</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <%= display_meta_tags %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="page-container">
      <div id="content-wrap">




  <!--   <%= link_to "consonancie", root_path, class: "name" %>-->
  <!--   <h3 id="img_logo">consonancie</h3>
     <h3 id="img_overlay"><%= link_to "consonancie", root_path%></h3> -->


     <div class="sidebar_menu hide_menu" style="background-color: #65B19D;">
       <i class="fa fa-times"></i>
       <h1><%= link_to "Consonancie", root_path %></h1>
       <li class="list_item"><a href="/posts?category=Beauty">Beauty</a></li>
       <li class="list_item"><a href="/posts?category=Lifestyle">Lifestyle</a></li>
       <li class="list_item"><a href="/posts?category=Entertainment">Entertainment</a></li>
       <li class="list_item"><a href="/posts?category=News">News</a></li>
       <a href="/contacts/new">Contact</a>
       <% if current_user && (current_user.admin?) %>
         <%= link_to "Users", users_path %>
       <% end %>
       <% if user_signed_in? %>
          <%= link_to "Dashboard", user_path(current_user) %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      <% else %>
          <a href="/apply">Apply</a>
       <% end %>
       <div style="height: 2000px; background-color: #65B19D;">
       </div>
     </div>



 <header id="main_navigation" class="clearfix">
 <nav>
           <h3 id="img_overlay"><%= link_to "consonancie", root_path%></h3>

          <div class="list_stuff">
          <li class="list_item"><a href="/posts?category=Beauty">Beauty</a></li>
          <li class="list_item"><a href="/posts?category=Lifestyle">Lifestyle</a></li>
          <li class="list_item"><a href="/posts?category=Entertainment">Entertainment</a></li>
          <li class="list_item"><a href="/posts?category=News">News</a></li>


      <% if user_signed_in? %>
      <a class="link" href="/signout" id="sign_out">Log Out</a>
      <% else %>
            <a class="link" href="/contacts/new" id="apply">Apply</a>
            <a class="link" href="/login" id="login">Log In</a>
          <% end %>
        </nav>
      </div>



    </header>

    <% if notice %>
      <p class="notice"> <%= notice %> </p>
    <% elsif alert %>
      <p class="alert"><%= alert %></p>
      <% end %>

    <%= yield %>
  </div>


    <footer id="footer">
      <p class="copyright">© 2019 consonancie</p>
      <nav>
      <a href="instagram.com/consonancie"><i class="fab fa-instagram"></i></a>


      </nav>
    </footer>




