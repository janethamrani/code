<div id="posts_wrapper" class="skinny_wrapper">
  <h1 id="form_title" style="margin-top: 20px;">Profile Preview</h1>

<br>
<div class="flex--p">
  <p>You're signed in as <%= @user.full_name %></p>
</div>
<hr class="user_hr">
<br><br><br><br>
  <h1 id="sub_title" style="margin-top: 40px;">Your Published Articles</h1>
  <div class="post-list">


    <% @user_posts.approved.each do |post| %>
    <div class="flex--postlist--item">
      <div class="inside--item">
          <h6 id="post-title"><a href="#"><%= link_to post.title, post%></a></h6>
      </div>
      <h6 id="date"><%= post.created_at.strftime('%A, %B %d') %></h6>
    </div>
    <% end %>
      </div>
<br>

      <h1 id="sub_title" style="margin-top: 40px;">Your Unfinished Articles</h1>
      <div class="post-list">


        <% @user_posts.each do |post| %>
          <% if post.approved? == false && post.waiting_for_approval == false %>
        <div class="flex--postlist--item">
          <div class="inside--item">
              <h6 id="post-title"><a href="#"><%= link_to post.title, post%></a></h6>
          </div>
          <h6 id="date"><%= post.created_at.strftime('%A, %B %d') %></h6>
        </div>
        <% end %>
        <% end %>

          </div>
<br>
          <h1 id="sub_title" style="margin-top: 40px;">Waiting to Be Published</h1>
          <div class="post-list">


            <% @user_posts.waiting_for_approval.each do |post| %>
            <div class="flex--postlist--item">
              <div class="inside--item">
                  <h6 id="post-title"><a href="#"><%= link_to post.title, post%></a></h6>
              </div>
              <h6 id="date"><%= post.created_at.strftime('%A, %B %d') %></h6>
            </div>
            <% end %>

              </div>




  <% if (current_user.admin?) %>
      <h1 id="form_title" style="margin-top: 40px;">All: Waiting for approval</h1>
      <% @posts.each do |post| %>
      <% if post.waiting_for_approval? %>
      <div class="flex--postlist--item">
        <div class="inside--item">
            <h6 id="post-title"><a href="#"><%= link_to post.title, post%></a></h6>
        </div>
        <h6 id="date"><%= post.created_at.strftime('%A, %B %d') %></h6>
      </div>
      <% end %>
        <% end %>
        <% end %>


      </div>

<br>


<%= link_to "New Post", new_post_path(@post), :class => "newpost--profile" %>    </p>



<br><br>


</div>

