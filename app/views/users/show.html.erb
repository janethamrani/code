<div id="posts_wrapper" class="skinny_wrapper">
  <h1 id="form_title" style="margin-top: -20px;">Profile Preview</h1>


<div class="flex--p">
  <p>You're signed in as <%= @user.full_name %></p>
</div>

  <h1 id="form_title">Your Articles</h1>

    <% @user_posts.each do |post| %>
    <div class="flex--postlist--item">
      <div class="inside--item">
          <h6 id="post-title"><a href="#"><%= link_to post.title, post%></a></h6>
      </div>
      <h6 id="date"><%= post.created_at.strftime('%A, %B %d') %></h6>
    </div>
    <% end %>

    <p>
      <%= link_to "New Post", new_post_path(@post) %>
    </p>






</div>

